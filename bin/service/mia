#!/bin/bash

. /etc/init.d/functions

pidfile="/home/karotz/mia/mia.pid"

start() {
  echo -n $"Starting Sinatra Mia: "
  su karotz -c "cd /home/karotz/mia/current;RACK_ENV=production GEM_HOME=/home/karotz/.gem /home/karotz/mia/current/bin/start >/home/karotz/mia/server.log 2>&1 &"
  RETVAL=$?
  if [ $RETVAL -eq 0 ]; then
    success
  else
    failure
  fi
  echo
  return $RETVAL
}

stop() {
  echo -n $"Stopping Sinatra Mia: "
  /home/karotz/mia/current/bin/stop
  RETVAL=$?
  echo
  return $RETVAL
}

restart() {
  stop
  start
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  *)
    echo $"Usage: $0 {start|stop|restart}"
    exit 1
esac
