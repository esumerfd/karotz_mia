#! /bin/bash

. /etc/init.d/functions

pidfile="/home/karotz/mia/mia.pid"

start() {
  echo -n $"Starting Sinatra Mia: "	
  daemon --user karotz "cd /home/karotz/mia/current;GEM_HOME=/home/karotz/.gem /usr/local/bin/ruby lib/server.rb"
  RETVAL=$?
  echo
  return $RETVAL
}

stop() {
  echo -n $"Stopping Sinatra Mia: "
  killproc "ruby"
  RETVAL=$?
  echo
  return $RETVAL
}	

restart() {
  stop
  start
}	

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  *)
    echo $"Usage: $0 {start|stop|restart}"
    exit 1
esac
